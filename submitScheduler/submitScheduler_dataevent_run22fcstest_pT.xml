<?xml version="1.0" encoding="utf-8" ?>
<!-- Job parameters -->
<job maxFilesPerProcess="1" filesPerHour="2">
  <!-- <stdout discard="true"/> -->
  <!-- Task list -->
  <command>
    stardev
    root4star -b -q runMudst_pT.C\(\"$INPUTFILE0\",-1,1000000\)
    mv StFcs*.root StFcsPi0invariantmass_pT&runnumber;_$JOBINDEX.root 
  </command>

  <!-- Necessary files -->
  <SandBox installer="ZIP">
    <Package>
      <File>file:[Current working folder]/runMudst_pT.C</File>
      <File>file:[Current working folder]/.sl73_gcc485</File>
      <File>file:[Current working folder]/fcsgain.txt</File>
      <File>file:[Current working folder]/fcsgaincorr.txt</File>
    </Package>
  </SandBox>

  <!-- Get input files from get_file_lis.pl -->
  <input URL="filelist:[Current working folder]/submitScheduler/&runnumber;eventroot.list" />

  <!-- Run log & error messages -->
  <stdout discard="true" />
  <stderr URL="file:[The folder you would like to save the log file]/&runnumber;_$JOBINDEX.err" />
  <output fromScratch="StFcs*.root" toURL="file:[Current working folder]/run22root/pT&runnumber;/"/>

</job>
